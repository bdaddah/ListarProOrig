# Database
DATABASE_URL="postgresql://user:password@localhost:5432/listardb?schema=public"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ISSUER="listar-backend"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf,video/mp4"

# Email (for OTP and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="ListarPro <noreply@listarapp.com>"

# Payment (PayPal Sandbox for development)
PAYPAL_MODE="sandbox"
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-webhook-id"

# App Settings
APP_NAME="ListarPro"
APP_URL="http://localhost:3000"
FRONTEND_URL="exp://localhost:19000"
PER_PAGE=10

# Admin Panel
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"
